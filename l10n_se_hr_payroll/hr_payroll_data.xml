      <field name="name">Test Attendans</field>
      <field name="state">code</field>
      <field name="condition" eval="True" />
      <field name="model_id" ref="hr.model_hr_employee" />
      <field name="code">
for o in object.browse(context.get('active_ids', [])):
    o.test_attendance()
